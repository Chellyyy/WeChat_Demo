.log-list {
  display: flex;
  flex-direction: column;
  padding: 40rpx;
}
.log-item {
  margin: 10rpx;
}
swiper {
  width: 100%;
  height: 600rpx;
}
swiper image{
  width: 100%; 
  height: 600rpx;
}
.logs-container{
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  padding: 5px;
}
.logs-author-date{
  margin: 10rpx 0 20rpx 10rpx;

}
.post-author{
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}
.logs-date{
  margin-left: 20rpx;
  vertical-align: middle;
  margin-bottom: 5px;
  font-size: 26rpx;
}
.logs-title{
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10px;
  margin-left: 10px;
  letter-spacing: 2rpx;
}
.logs-image{
  width: 710rpx;
  height: 360rpx;
  margin-left: 10rpx;
  margin-bottom: 20rpx;
}
.logs-content{
  color: #666;
  font-size: 32rpx;
  font-weight: 500;
  margin-left: 10rpx;
  margin-bottom: 20rpx;
  letter-spacing: 2rpx;
}
.logs-data{
  flex-direction: row;
}
.logs-data-img{
  width: 36rpx;
  height: 36rpx;
  margin-left: 10rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}
.logs-data-coll{
  font-size: 32rpx;
  vertical-align: middle;
  margin-right: 20rpx;
  color: #666;                            
}
.logs-data-view{
  font-size: 32rpx;
  vertical-align: middle;
  margin-right: 20rpx;
  color: #666;
}
