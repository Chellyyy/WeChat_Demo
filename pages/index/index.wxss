/**index.wxss**/
.container{
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  display: flex;
  margin-top: 200px;
  border: 1px solid black;
  width: 400rpx;
  height: 200rpx;
  align-items: center;
}
.user-motto{
  vertical-align: middle;
}